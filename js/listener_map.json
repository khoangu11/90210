{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 900,
  "height": 480,
  "title": "Country-level most listened-to artist (sample of 5,000 listeners)",
  "projection": {"type": "equalEarth"},

  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/FIT3179/Vega-Lite/main/2_symbol_map/js/ne_110m_admin_0_countries.topojson",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },

    {
      "data": {"url": "data/listeners_geo_aggregated.csv"},
      "transform": [
        {
          "joinaggregate": [
            {"op": "sum", "field": "Listeners", "as": "CountryTotal"}
          ],
          "groupby": ["Country", "Latitude", "Longitude"]
        },
        {
          "window": [{"op": "rank", "as": "ArtistRank"}],
          "sort": [{"field": "Listeners", "order": "descending"}],
          "groupby": ["Country"]
        },
        {"filter": "datum.ArtistRank === 1"}
      ],
      "mark": {"type": "circle", "opacity": 0.8, "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "Longitude", "type": "quantitative"},
        "latitude":  {"field": "Latitude",  "type": "quantitative"},

        "size": {
          "field": "CountryTotal",
          "type": "quantitative",
          "title": "Listeners in country (sample)",
          "scale": {
            "domain": [400, 550],
            "range": [40, 520],
            "clamp": true
          },
          "legend": {
            "values": [400, 425, 450, 475, 500, 525, 550]
          }
        },

        "color": {
          "field": "Most Played Artist",
          "type": "nominal",
          "title": "Most listened-to artist"
        },

        "tooltip": [
          {"field": "Country", "type": "nominal"},
          {"field": "Most Played Artist", "type": "nominal", "title": "Top artist"},
          {"field": "Listeners", "type": "quantitative", "title": "Top artist listeners (sample)"},
          {"field": "CountryTotal", "type": "quantitative", "title": "All listeners in country (sample)"}
        ]
      }
    }
  ]
}
